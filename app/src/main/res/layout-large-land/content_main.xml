<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nursulaeman.geektask01.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText1"
                    style="@style/EditTextStyle001"
                    android:hint="@string/income" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_outcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText2"
                    style="@style/EditTextStyle001"
                    android:hint="@string/outcome" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView1"
                style="@style/TextViewStyle001"
                android:hint="@string/balance" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonLargeLandStyle001"
                    android:text="1" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="1"
                    android:text="2" />

                <Button
                    android:id="@+id/button3"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="2"
                    android:text="3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button4"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/button5"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="1"
                    android:text="5" />

                <Button
                    android:id="@+id/button6"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="2"
                    android:text="6" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button7"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/button8"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="1"
                    android:text="8" />

                <Button
                    android:id="@+id/button9"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="2"
                    android:text="9" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonC"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_weight="1"
                    android:text="C" />

                <Button
                    android:id="@+id/button0"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="1"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonBack"
                    style="@style/ButtonLargeLandStyle001"
                    android:layout_column="2"
                    android:text="BACK" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/FABLargeLandStyle01"
        android:src="@drawable/ic_button1"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right" />

</android.support.design.widget.CoordinatorLayout>

